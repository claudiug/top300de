
<%= form_for [:admin, @painting], html: {class: "form-horizontal"} do |f| %>
    <% if @painting.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@painting.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% @painting.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: 'col-lg-1 control-label' %>
      <div class="col-lg-2">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :is_feature, class: 'col-lg-1 control-label', multipart:true %>
      <div class="col-lg-2">
        <%= f.check_box :is_feature, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :is_active, class: 'col-lg-1 control-label' %>
      <div class="col-lg-2">
        <%= f.check_box :is_active, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, class: 'col-lg-1 control-label' %>
      <div class="col-lg-2">
        <%= f.file_field :image, class: 'btn btn-primary' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :remote_image_url, class: 'col-lg-1 control-label' %>
      <div class="col-lg-2">
        <%= f.text_field :remote_image_url, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-1 col-lg-10">
        <%= f.submit("Add a new image", class: 'btn btn-primary') %>
      </div>
    </div>
<% end%>