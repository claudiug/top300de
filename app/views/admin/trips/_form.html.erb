<ul class="tab-switch" id="tab-switch" style="position: relative; text-align: left; padding-left: 60px;">
  <li class="active" style="text-align: center"><a href="#en_add" title="English">English</a></li>
  <li><a href="#de_add" title="Deutsch" style="text-align: center">Deutsch</a></li>
</ul>

<%= form_for [:admin, @trip], html: {class: "form-horizontal"} do |f| %>
<%= render "admin/trips/error" %>
<div class="english-add-form tab-content" style="background: white; padding: 30px 0" id="en_add">    
    <%= render "admin/trips/eng_trip_form", f1: f %>
</div>

<div class="deutsche-add-form tab-content" style="background: white; padding: 30px 0" id="de_add">
    <%= render "admin/trips/trip_form_content" %>
</div>

<div class="form-group">
    <div class="col-lg-offset-1 col-lg-10">
      <%= f.submit("Add a new trip", class: 'btn btn-primary') %>
    </div>
</div>
<% end %>

<style type="text/css">
    .tab-switch li a {
        background: transparent;
        color: #333;
    }
    .tab-switch li a:hover {
        color: #000;
    }
    .tab-switch li.active a {
      background: white;
      color: #333
  }
</style>
  <script type="text/javascript">
  $(document).ready(function() {


      $(".tab-content").not(":first").hide();
      $("#tab-switch li:first").addClass("active").show();

      $("#tab-switch li").click(function() {
      $("#tab-switch li.active").removeClass("active");
      $(this).addClass("active");
      $(".tab-content").hide();
      $($('a',this).attr("href")).show();

      return false;
      });
  });
  </script>

