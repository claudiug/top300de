<% body_class "on-trip" %>
<div class="trip-page">

<div id="galleries" style="background-image: url(<%= @trip.paintings.first.image.url() %> ); background-size: cover; background-position: 50% 50%; background-position: fixed;">

  <div class="title">
    <div class="wrapBlock">
      <h1> <%= (params[:locale].eql?"en") ? @trip.eng_name : @trip.german_name %> </h1>
        <span class="distance">
          <span></span><%= calculate_distance('CAR', session[:location], @trip.city).first unless session[:location].blank? %></span>
        <span class="km">
           <span></span><%= calculate_distance('CAR', session[:location], @trip.city).last unless session[:location].blank? %>
        </span>
      <% if @trip.country.present? %>
        <span class="capital">
           <span></span><%= (params[:locale].eql?"en") ? @trip.country : @trip.ger_country %>
        </span>
      <% end %>
    </div>
  </div> <!-- .title -->
  <div class="adpic-cover"></div>
</div>

  <div class="trip-wrap">

  <div class="trip-data wrapBlock">

    <section class="filter-col fly-left" id="left-trip-filters">
      <div class="box leftcol-break">

        <div class="box-content side_nav">
          <a href="javascript:;" title="About" class="selected" rel="about"><span><%= t "default.product_page.menu_about" %></span></a>
          <a href="javascript:;" title="Gallery" rel="gallery"><span><%= t "default.product_page.menu_gallery" %></span></a>
          <a href="javascript:;" title="Map" rel="directions"><span><%= t "default.product_page.menu_map" %></span></a>
        </div> <!-- .box-content -->
      </div> <!-- .box -->
   </section>
