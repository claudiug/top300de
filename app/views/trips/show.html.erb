    <section class="trip-block stand-by" id="trip-holder">
      <div class="scroller">

      <div class="trip-section" id="about">
        <h2><%= t "default.product_page.menu_about" %></h2>
            <div class="section-content">
              <p>
              <%= (params[:locale].eql?"en") ? @trip.eng_description.html_safe : @trip.german_description.html_safe %>
              </p>
            </div>

        <div class="trip-special">
            <div class="trip-special-block special-coordinates wi wi-location-arrow">
                  <h3>Location</h3>
                  <span><%= (params[:locale].eql?"en") ? @trip.city : @trip.ger_city %>, <%=@trip.zip_code%></span>
                  <span>Lat: <%=@trip.latitude%></span>
                  <span>Long: <%=@trip.longitude%></span>

                  <% if @trip.country.present? %>
                    <span>Country: <%= @trip.country %> </span>
                    <span>Population: <%= @trip.population %> </span>
                    <span>Local time: <%= Time.now.strftime("%H:%M") %></span>
		              <% elsif @trip.ger_country.present? %> 
		                <span>Country: <%= @trip.ger_country %> </span>
                    <span>Population: <%= @trip.population %> </span>
                    <span>Local time: <%= Time.now.strftime("%H:%M") %></span>
                  <% end %>
            </div>

          <div class="trip-special-block special-opening wi wi-clock-o">
            <h3>Opening hours</h3>
            <%= @trip.population %>
          </div>
          <div class="trip-special-block special-weahter wi wi-cloud">
            <h3>Weather now</h3>
            <span><%= @weather[:currently][:summary] unless @weather.nil? %></span>
          </div>

        </div>


      </div> <!-- #about -->

        <div class="trip-section" id="gallery">
          <h2><%= t "default.product_page.menu_gallery" %></h2>
          <div class="section-content">
            <ul>
              <% @trip.paintings.each do |paint| %>

                  <li>
                    <%= link_to image_tag(paint.image_url(:thumb).to_s), paint.image_url, :target=>"_blank" %>
                  </li>

              <% end %>
            </ul>
          </div>

        </div>

        <div class="trip-section" id="directions">

          <h2><%= t "default.product_page.menu_map" %></h2>
          <div id="map-canvas"></div>
          <div id="pano" style="position:relative; width: 740px; height: 500px; display: block"></div>
        </div>

      </div> <!-- .scroller -->
    </section>

  </div> <!-- .trip-data -->

  </div> <!-- .wrapBlock -->

</div> <!-- .trip-page -->

<input id="start" value="Weingarten" style="display: none" />
<input id="end" value="Berlin" style="display: none" />
