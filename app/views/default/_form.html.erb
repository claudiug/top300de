<section class="homepageEngine" data-type="background" data-speed="2">
  <div class="adPic">
    <div class="slogan"><%= t "default.home.slogan" %>
      <!-- <div class="subSlogan"><%= t "default.home.subslogan" %></div> -->
    </div>
    <%= form_tag trips_path, method: :get do %>
        <div id="Search">
          <div class="searchBlock options">
            <label class="styled" id="go_hike">
              <%= check_box_tag("category[hiking]", (params[:category]), false, id:"go_hike") %>
              <span><span> <%= t "default.home.hiking_label" %> </span></span>
            </label>

            <label class="styled" id="go_mountain">
              <i id="linked"></i>
              <!--<input type="checkbox" name="hike">-->
              <%= check_box_tag("category[mountains]", (params[:category]), false, id:"go_mountain") %>

              <span><span> <%= t "default.home.moutain_label" %> </span></span>
            </label>

            <label class="styled" id="go_lake">
              <!--<input type="checkbox" name="beach">-->
              <%= check_box_tag("category[waters]", (params[:category]), false, id:"go_lake") %>

              <span><span><%= t "default.home.water_label" %></span></span>
            </label>

            <label class="styled" id="go_castle">
              <!--<input type="checkbox" name="castles">-->
              <%= check_box_tag("category[castles]",(params[:category]), false, id:"go_castle") %>

              <span><span><%= t "default.home.castle_label" %></span></span>
            </label>

            <label class="styled" id="go_events">
              <!--<input type="checkbox" name="lake">-->
              <%= check_box_tag("category[events]", (params[:category]), false, id:"go_events") %>

              <span><span><%= t "default.home.event_label" %></span></span>
            </label>

            <label class="styled" id="go_city">
              <!--<input type="checkbox" name="fun">-->
              <%= check_box_tag("category[cities]", (params[:category]), false, id:"go_city") %>
              <span><span><%= t "default.home.city_label" %></span></span>
            </label>

          </div> <!-- .searchBlock -->

          <!--
          <div class="searchBlock select-days">

            <div class="sbTitle">Leaving from:</div>

            <label id="where_from">


            </label>

          </div>  -->

          <div style="position: fixed; left: -9999px; top: -9999px;"> <%= text_field_tag("location", params[:location], class:"tinput", placeholder:"your city name here") %></div>

          <div class="searchBlock submit">
            <%= submit_tag("Find places", class: "submit-go") %>
                <!-- <div class="determined-location">Determined location: <em id="det-location"></em></div> -->
          </div> <!-- .searchBlock -->

        </div>


        </div> <!-- #Search -->
    <% end %>

    <div class="scrollMore">
      <%= image_tag "darrow.svg", alt:"Scroll for more", width: "20", id: "scrollPage" %>
    </div>

<div class="adpic-cover"></div>
</section>
