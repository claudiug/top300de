                <span></span>
              </label>

              <label class="styled" id="go_fun">
                <!--<input type="checkbox" name="fun">-->
                <%= check_box_tag("fun", params[:go_fun], false, id:"go_fun") %>
                <span></span>
              </label>

              <label class="styled" id="go_love">
                <!--<input type="checkbox" name="love">-->
                <%= check_box_tag("love", params[:go_love], false, id:"go_love") %>

                <span></span>
              </label>

            </div> <!-- .searchBlock -->

            <div class="searchBlock select-days">

              <div class="sbTitle">Days:</div>

              <div class="count">
                <!--<input type="text" name="days" id="days" value="7" class="tinput">-->
                <%= text_field_tag("days", "7", class:"tinput") %>
                <span class="add pnav">+</span>
                <span class="rem pnav">-</span>
              </div> <!-- .count -->

            </div> <!-- .searchBlock -->

            <div class="searchBlock submit">


            </div> <!-- .searchBlock -->



    </div> <!-- #Search -->

