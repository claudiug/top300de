    <div id="Search">

            <div class="searchBlock">

              <div class="sbTitle">Persons:</div>



              <div class="count">
                <%= image_tag "person.svg", alt:"Travelers", width: "20" %>
                <!--<input type="text" name="persons" id="persons" value="2">-->
                <%= text_field_tag("persons", 2) %>

                <span class="number">x<span>2</span></span>
