                <%= text_field_tag("days", "", class:"tinput", placeholder:"your city name here") %>
                <small>Drop your location here and you'll get travel times and more</small>
              </label>

            </div> <!-- .searchBlock -->

            <div class="searchBlock submit">
              <%= button_tag("", class: "submit-go") %>

