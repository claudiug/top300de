                <!--<input type="checkbox" name="fun">-->
                <%= check_box_tag("city", params[:go_city], false, id:"go_city") %>
                <span><span>Cities</span></span>
              </label>

              <label class="styled" id="go_landscape">
                <!--<input type="checkbox" name="fun">-->
                <%= check_box_tag("landscape", params[:go_landscape], false, id:"go_landscape") %>
                <span><span>Sightseeing</span></span>
